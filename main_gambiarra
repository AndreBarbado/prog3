    public:
    std:: string nome_maquina;
    bool recebe_a_vista;
    data data_cadastro;
    bool esta_ativo;

    //------------- inicia lista de bandeira

        std::list<bandeira> lista_bandeira;
        std::list<bandeira>::iterator it;

    //------------- opera lista de maquina de cartao
    
        void nova_bandeira(){
        bandeira a;
        lista_bandeira.push_front(a); //adc novo lote no inicio

    }


    private:
    protected:
};

