class lote{
    private:
    int qnt;
    float preco_unidade;
    bool consiguinado;
    // data vencimento;
    // data data_retirada;
    // data data_pagamento;

    //--------------navega pela lista de lotes
    // lote *prox;
    // lote *ant;
    public:
    lote(){}

    lote(int a){
        this->set_qnt(a);
    }

    void set_qnt(int a){
        if (a>=0)
            qnt=a;
    }

    int get_qnt(void){
        return qnt;
    }

    protected:
};

